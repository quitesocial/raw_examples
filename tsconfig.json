{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext",
      "dom.iterable"
    ],
    "module": "esnext",
    "noEmit": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "node"
    ]
  },
  "include": [
    "./src",
    "*.d.ts",
    "jest.config.js",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
